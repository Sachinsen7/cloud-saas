generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id             String   @id @default(cuid())
  title          String
  description    String?
  publicId       String
  originalSize   String
  compressedSize String
  duration       Float
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Image {
  id                   String   @id @default(cuid())
  title                String
  description          String?
  publicId             String
  originalSize         String
  fileType             String
  tags                 String[] // Auto-generated tags from AI
  extractedText        String? 
  hasBackgroundRemoved Boolean  @default(false)
  isEnhanced           Boolean  @default(false)
  // AI Content Analysis fields
  aiCaption            String? 
  qualityScore         Float? 
  qualityLevel         String? // low, medium, high
  watermarkDetected    String? 
  objectDetection      Json? 
  // AI Vision fields
  aiVisionTags         Json?
  aiVisionModeration   Json? 
  aiVisionGeneral      Json? // General AI responses
  tokensUsed           Int? 
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Document {
  id                String   @id @default(cuid())
  title             String
  description       String?
  originalPublicId  String 
  pdfPublicId       String?
  thumbnailPublicId String?
  originalSize      String
  fileType          String 
  conversionStatus  String   @default("pending") 
  pageCount         Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
